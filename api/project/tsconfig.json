{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./",
    "lib": ["es2019"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@core/*": ["src/main/core/*"],
      "@controllers/*": ["src/main/controllers/*"],
      "@services/*": ["src/main/services/*"]
    }
  },
  "exclude": ["node_modules"]
}
