{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./",
    "lib": ["es2019"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@core/*": ["src/main/core/*"],
      "@model/*": ["src/main/common/model/*"],
      "@controllers/*": ["src/main/controllers/*"],
      "@services/*": ["src/main/services/*"]
    },
    "strict": true
  },
  "exclude": ["node_modules"]
}
